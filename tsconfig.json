{ 
    "compilerOptions":{ 
       "target":"es6",
       "moduleResolution":"node",
       "module":"commonjs",
       "noLib":false,
       "emitDecoratorMetadata":true,
       "experimentalDecorators":true,
       "allowJs": true,
       "sourceMap":true,
       "pretty":true,
       "allowUnreachableCode":true,
       "allowUnusedLabels":true,
       "noImplicitAny":true,
       "noImplicitReturns":false,
       "noImplicitUseStrict":false,
       "outDir":"dist/",
       "baseUrl":"server",
       "listFiles":false,
  },
  "include":[ 
     "server/**/*"
  ],
  "exclude":[ 
     "node_modules",
     "tests/**/*"
  ],
  "compileOnSave":true
}
